{% extends 'base.html.twig' %}
{% block body %}
    <div class="row">

        <div class="col-md-8">
            <h1>Accueil</h1>
    {% for a in articles %}
        <hr/>
        <h2>{{ a.thetitle }}</h2>
        <hr/>
        <h4>
            {% if not a.section.empty %}
                {% for c in a.section %}
                    <a href="{{ path("sections",{ 'id': c.id }) }}">{{ c.thetitle }}</a><br>
                {% endfor %}
            {% endif %}</h4><hr/>
        <p>{{ a.thetext }}</p>
        <p>{{ a.thedate|date("Y-m-d H:i:s") }} par {{ a.fosUser.username }}</p>
    {% endfor %}
        </div>
        <div class="col-md-4">
            <div class="panel-heading">Sections disponibles :</div>
            {% for s in sections %}
                <div class="panel panel-primary">
                    <li class="list-group-item list-group-item-success"><a href="{{ path("sections",{ 'id': s.id }) }}">{{ s.thetitle }}</a></li>
                </div>
            {% endfor %}
        </div><hr/>
    </div>
{% endblock %}